{
	"compilerOptions": {
		"module": "commonjs",
		"declaration": true,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"preserveWatchOutput": true,
		"target": "es2017",
		"sourceMap": true,
		"outDir": "./dist",
		"incremental": true,
		"noImplicitAny": true,
		"noImplicitReturns": true
	},
	"exclude": ["node_modules", "dist"],
	"include": ["src/**/*"]
}
