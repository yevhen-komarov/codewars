{
	"compilerOptions": {
		"module": "ESNext",
		"declaration": true,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"preserveWatchOutput": true,
		"target": "ES2017",
		"sourceMap": true,
		"outDir": "./dist",
		"incremental": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"moduleResolution": "node"
	},
	"ts-node": {
		"esm": true
	},
	"exclude": ["node_modules", "dist"],
	"include": ["**/*.ts", "src/**/*"],
	"paths": {
		"*.ts": ["*"]
	}
}
